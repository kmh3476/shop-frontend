{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/"
    }
  ],
  "redirects": [
    {
      "source": "/api/(.*)",
      "destination": "https://shop-backend-1-dfsl.onrender.com/api/$1",
      "permanent": false
    }
  ],
  "env": {
    "VITE_API_BASE_URL": "https://shop-backend-1-dfsl.onrender.com"
  }
}
